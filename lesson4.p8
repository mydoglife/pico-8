pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
ball_x=30
ball_dx=3
ball_y=64
ball_dy=1
ball_r=3
col=0
frame=0

function _init()
 cls()
end

function _update()
	frame=frame+1
	ball_x=ball_x+ball_dx
	ball_y=ball_y+ball_dy
	col=col+1
	
	ball_r=2+(sin(frame/50)*2)
	
	if ball_x > 127 or ball_x <0 then
		ball_dx=-ball_dx
		sfx(001)
	end
	if ball_y > 127 or ball_y <0 then
		ball_dy=-ball_dy
		sfx(001)
	end	
	
		
end

function _draw()
	cls()
	circfill(ball_x,ball_y,ball_r,col)
end



