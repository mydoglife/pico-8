end

function make_player()
	px=10
	py=10
	psprite=4
end

function move_player()
 if (btn(0)) px-=1
 if (btn(1)) px+=1
 if (btn(2)) py-=1
 if (btn(3)) py+=1
end

function draw_player()
	spr(1,px,py+0)
	spr(2,px,py+25)
	spr(3,px,py+50)
	spr(4,px,py+75)
end











