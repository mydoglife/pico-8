version 32
__lua__
function _init()
	make_player()
end

function _update()
	move_player()
end

function _draw()
	cls()
	draw_player()
end

function make_player()
	px=10
	py=10
	psprite=4
	sprite=8
	timing=0.25
end

function move_player()
 if (btn(0)) then
 	px-=1
 	sprite+=timing
  if sprite >11 then 
  	sprite=8 
  end
 end
 if (btn(1)) then
 	px+=1
 	sprite+=timing
 	if sprite >11 then
 	 sprite=8
 	end
 end	
 	if (btn(2)) py-=1
  if (btn(3)) py+=1
end

function animate()
end	


function draw_player()
	spr(1,px,py+0)
	spr(2,px,py+25)
	spr(3,px,py+50)
	spr(4,px,py+75)
	spr(sprite,px,py+100)
end











